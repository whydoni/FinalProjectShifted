<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FF5722">
        <ImageView
            android:id="@+id/logo_btpns"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/bpts_ist"
            app:tint="@color/white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_baseline_wifi_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="v 1.01"
                android:layout_gravity="center"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_salam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Selamat Datang di BTPN Syariah Mobile Banking"
        android:layout_marginTop="110dp"
        android:textSize="15sp"
        android:textColor="#FF5722"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_salam"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="35dp"
        android:backgroundTint="#FF5722"
        android:textColor="#FF5722"
        android:singleLine="true"
        android:drawableLeft="@drawable/ic_outline_account_circle_24"
        android:hint=" Username"
        android:textColorHint="#FF5722"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_username"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:drawableLeft="@drawable/ic_outline_lock_24"
        android:hint=" Password"
        android:textColor="#FF5722"
        android:singleLine="true"
        android:textColorHint="#FF5722"
        android:backgroundTint="#FF5722"
        android:drawableRight="@drawable/ic_outline_remove_red_eye_24"/>

    <TextView
        android:id="@+id/tv_forgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forget"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#FF5722"
        android:layout_below="@id/et_password"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_centerInParent="true"
        android:layout_below="@id/tv_forgot"
        android:textColor="#FF5722"
        android:textStyle="bold"
        android:text="@string/reset"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/reset_button"
        android:layout_centerInParent="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="130dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/bg_trasnparent_orange"
        android:text="@string/login"
        android:textColor="#FF5722" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_login"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="belum punya akun mobile banking?"
        android:textColor="#FF5722"
        android:gravity="center"
        android:textSize="12sp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_register"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/bg_trasnparent_orange"
        android:text="registrasi"
        android:textColor="#FF5722"
        android:layout_below="@id/tv_register"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#FF5722"
        android:layout_marginTop="26dp"
        android:layout_below="@id/bt_register">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/bpts_ist"
            android:layout_marginLeft="25dp"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="25dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:text="@string/splash_text"/>
    </LinearLayout>

</RelativeLayout>